TYPE=xshbar_plugin
NAME="netstat"
AUTHOR="speedie"
VERSION="0.3"

NETSTAT_DEVICE="enp4s0"

netstat()
{
  NETSTAT_RX=$(</sys/class/net/$NETSTAT_DEVICE/statistics/rx_bytes awk '{$1=$1/1024000; print $1"B";}' | sed 's/.*\(....\)/\1/' | sed 's|.|0.|')
  NETSTAT_TX=$(</sys/class/net/$NETSTAT_DEVICE/statistics/tx_bytes awk '{$1=$1/1024000; print $1"B";}' | sed 's/.*\(....\)/\1/' | sed 's|.|0.|')
  # NETSTAT_DEVICE
}

netstat
